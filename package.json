{
    "name": "design-tokens",
    "version": "0.0.1",
    "description": "Convert Figma tokens to assets",
    "engine": {
        "node": "16"
    },
    "scripts": {
        "clean": "rimraf generated/",
        "format": "prettier --write '**/*.{js,json}'",
        "prebuild": "run-s clean tokens:transform",
        "build": "run-p build:light build:dark",
        "build:light": "style-dictionary build --config ./src/config/sd.light.config.js",
        "build:dark": "style-dictionary build --config ./src/config/sd.dark.config.js",
        "tokens:transform": "run-p transform:theme:light transform:theme:dark",
        "transform:theme:light": "token-transformer ./tokens.json generated/tokens/light.json base,semantic,comp,light",
        "transform:theme:dark": "token-transformer ./tokens.json generated/tokens/dark.json base,semantic,comp,dark"
    },
    "dependencies": {
        "token-transformer": "^0.0.23"
    },
    "devDependencies": {
        "@tsconfig/node16-strictest": "^1.0.1",
        "@types/node": "^17.0.31",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "style-dictionary": "^3.7.0",
        "typescript": "^4.6.4"
    },
    "author": "PaddyPower",
    "license": "ISC",
    "keywords": [
        "figma",
        "design",
        "tokens",
        "style dictionary",
        "typescript",
        "assets",
        "color",
        "typography"
    ]
}
